<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.lightina.managebooks.dao.UserMapper">
    <select id="checkUser" resultType="User">
        select * from reader where user_name=#{user.userName} and pass_wd=#{user.passWd}
    </select>

    <select id="findByUserName" resultType="User">
        select * from reader where user_name=#{user.userName}
    </select>

    <select id="checkManager" resultType="User">
        select manager_id as user_id, pass_wd, mname as user_name from manager where mname=#{user.userName} and pass_wd=#{user.passWd};
    </select>

    <insert id="addUser" parameterType="User">
        insert into reader(user_name,pass_wd,rname,phone,usertype) values (#{user.userName},#{user.passWd},#{user.rname},#{user.phone},#{user.usertype});
    </insert>

    <update id="updatePwd" parameterType="User">
        update reader
        set pass_wd = #{user.passWd}
        where user_name = #{user.userName};
    </update>

    <select id="findPwd" resultType="java.lang.String" parameterType="java.lang.String">
        select pass_wd from reader where phone=#{phone};
    </select>

</mapper>