<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.lightina.managebooks.dao.ForumMapper">

    <!--创建Topic-->
    <insert id="addTopic" parameterType="Topic">
        insert into topic(userID,date,tag,commentCount,title,abstracts,text,courseID,userName,userType)
        values(#{topic.userID},#{topic.date},#{topic.tag},#{topic.commentCount},#{topic.title},#{topic.abstracts},#{topic.text},#{topic.courseID},#{topic.userName},#{topic.userType})
    </insert>

    <!--查询Topic-->
    <select id="getTopicByCourseID" resultType="Topic">
        select topic.* from topic
        where topic.courseID = #{courseID}
    </select>
    <!--查询Topic-->
    <select id="getTopicByTitle" resultType="Topic" >
        select topic.* from topic
        where topic.courseID = #{courseID} and topic.title like CONCAT('%','${title}','%')
    </select>


    <!--查询单个讨论主题的内容-->
    <select id="getTopicByTopicID" resultType="Topic">
        select topic.* from topic
        where topic.topicID = #{topicID}
    </select>

    <update id="updateTopic" parameterType="Topic">
        update topic
        set CommentCount = #{CommentCount}
        where topicID = #{topicID}
    </update>

    <!--在某个主题下面添加评论-->
    <insert id="addComment" parameterType="Comment">
        insert into comment(userID,topicID,date,text,reCommentCount,email,website,userName,userType)
        values (#{comment.userID},#{comment.topicID},#{comment.date},#{comment.text},#{comment.reCommentCount},#{comment.email},#{comment.website},#{comment.userName},#{comment.userType})
    </insert>

    <!--在某个主题下面删除评论-->
    <delete id="deleteComment" parameterType="int">
        delete from comment
        where comment.commentID = #{commentID}
    </delete>

    <!--查询某个主题下面的所有评论-->
    <select id="getCommentByTopicID" resultType="Comment">
        select comment.*
        from comment
        where comment.topicID = #{topicID}
    </select>

    <!--在某个评论下添加回复-->
    <insert id="addReComment" parameterType="ReComment">
        insert into recomment(commentID,userID,text,date,email,website,userName,userType)
        values (#{reComment.commentID},#{reComment.userID},#{reComment.text},#{reComment.date},#{reComment.email},#{reComment.website},#{reComment.userName},#{reComment.userType})
    </insert>



    <!--获取某个评论下的所有回复-->
    <select id="getReCommentByCommentID" resultType="ReComment">
        select recomment.*
        from recomment
        where recomment.commentID = #{commentID}
    </select>


    <!--删除话题-->
    <delete id="deleteTopic" parameterType="int">
        delete from topic
        where topic.topicID = #{topicID}
    </delete>
    <select id="getUserByUserID" resultType="User">
        select user.*
        from user
        where user.userID = #{userID}
    </select>



</mapper>